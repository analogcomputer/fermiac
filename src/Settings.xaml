        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fermiac"
        mc:Ignorable="d"
        Title="Fermiac Settings" Height="320" Width="800" Background="Black" Loaded="Window_Loaded">
    <Grid>
        <ComboBox Name="audioSources" HorizontalAlignment="Left" Margin="70,10,0,0" VerticalAlignment="Top" Width="285"/>
        <Label Content="Use Mic:" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
